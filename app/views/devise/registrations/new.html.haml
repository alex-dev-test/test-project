.register-box
  .register-logo
    %a{ href: '../../index2.html' }
      %b> Admin
      LTE
  .register-box-body
    %p.login-box-msg Register a new membership
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.input :email, label: false, required: true, autofocus: true, placeholder: 'Email', class: 'form-control'
        %span.glyphicon.glyphicon-user.form-control-feedback
      .form-group.has-feedback
        = f.input :password, label: false, placeholder: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .form-group.has-feedback
        = f.input :password_confirmation, label: false, required: true, placeholder: 'Retype password'
        %span.glyphicon.glyphicon-log-in.form-control-feedback
      .row
        .col-xs-8
          .checkbox.icheck
            %label
        / /.col
        .col-xs-4
          %button.btn.btn-primary.btn-block.btn-flat{ type: 'submit'} Register

      .social-auth-links.text-center
        %p - OR -
        %a.btn.btn-block.btn-social.btn-facebook.btn-flat{ href: '#' }
          %i.fa.fa-facebook
          Sign up using
          Facebook


    = render "devise/shared/links"

  :javascript
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
