.login-box
  .login-logo
    %a{:href => "../../index2.html"}
      %b> Admin
      LTE
  / /.login-logo
  .login-box-body
    %p.login-box-msg Sign in to start your session
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.input :email, label: false, required: false, autofocus: true, placeholder: 'Email'
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.input :password, label: false, required: false, placeholder: 'Password'
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-8
          .checkbox.icheck
            %label
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        / /.col
        .col-xs-4
          %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Sign In

    = render "devise/shared/links"

  :javascript
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });



