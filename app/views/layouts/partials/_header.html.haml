    .navbar-custom-menu
      %ul.nav.navbar-nav
        %li.user.user-menu= link_to 'Sign Up', new_user_registration_path, class: 'btn'
        %li.user.user-menu= link_to 'Sign In', new_user_session_path, class: 'btn'

